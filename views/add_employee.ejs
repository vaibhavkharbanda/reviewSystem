<link rel="stylesheet" href="/css/add_employee.css">
<div id="container">
    <h1 class="text-center text-white">Add Employee</h1>

    <form action="/users/add-employee" method="post" class="text-center">
        <input type="text" name="name" placeholder="Employee Name" required>
        <input type="text" name="empCode" placeholder="Employee Code " required>
        <input type="email" name="email" placeholder="Employee Email" required>
        <input type="submit" value="Add Employee">
    </form>
</div>